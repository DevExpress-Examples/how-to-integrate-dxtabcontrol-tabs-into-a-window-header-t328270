<dx:DXTabbedWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal" 
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        Icon="{dx:DXImage Image=Design_16x16.png}"
        dx:ThemeManager.ThemeName="Office2013"
        x:Class="DXTabControlExample.MainWindow"
        Title="Tabbed Window" Height="350" Width="550">
    <Grid>
        <dx:DXTabControl>
            <dx:DXTabItem Header="Original Text">
                <TextBox/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Edited Text">
                <TextBox/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Result Text">
                <TextBox/>
            </dx:DXTabItem>
            <dx:DXTabControl.View>
                <dx:TabControlScrollView/>
            </dx:DXTabControl.View>
        </dx:DXTabControl>
    </Grid>
</dx:DXTabbedWindow>

